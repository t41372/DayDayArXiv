DAYDAYARXIV_LLM__WEAK__API_KEY=
DAYDAYARXIV_LLM__WEAK__MODEL=
DAYDAYARXIV_LLM__WEAK__RPM=20
DAYDAYARXIV_LLM__WEAK__TIMEOUT_S=60
DAYDAYARXIV_LLM__WEAK__MAX_RETRIES=3

DAYDAYARXIV_LLM__STRONG__BASE_URL=
DAYDAYARXIV_LLM__STRONG__API_KEY=
DAYDAYARXIV_LLM__STRONG__MODEL=
DAYDAYARXIV_LLM__STRONG__RPM=10
DAYDAYARXIV_LLM__STRONG__TIMEOUT_S=90
DAYDAYARXIV_LLM__STRONG__MAX_RETRIES=3

# Optional backup provider (fallback)
DAYDAYARXIV_LLM__BACKUP__BASE_URL=
DAYDAYARXIV_LLM__BACKUP__API_KEY=
