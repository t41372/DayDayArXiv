# Example configuration for DayDayArXiv

data_dir = "daydayarxiv_frontend/public/data"
log_dir = "logs"
log_level = "INFO"

category = "cs.AI"
max_results = 1000
concurrency = 5
batch_size = 10
paper_max_attempts = 3
fail_on_error = false
failure_patterns = ["翻译失败", "生成失败", "快报生成失败"]

[llm.weak]
base_url = "https://api.openai.com/v1"
api_key = "YOUR_WEAK_PROVIDER_KEY"
model = "gpt-4o-mini"
rpm = 20
timeout_s = 60
max_retries = 3

[llm.strong]
base_url = "https://api.strong-provider.com/v1"
api_key = "YOUR_STRONG_PROVIDER_KEY"
model = "gpt-4o"
rpm = 10
timeout_s = 90
max_retries = 3

# Optional backup provider (fallback)
[llm.backup]
base_url = "https://api.somebackup.com/v1"
api_key = "YOUR_BACKUP_PROVIDER_KEY"
model = "gpt-4o-mini"
rpm = 10
timeout_s = 90
max_retries = 3

[langfuse]
enabled = true
host = "https://cloud.langfuse.com"
public_key = "YOUR_LANGFUSE_PUBLIC_KEY"
secret_key = "YOUR_LANGFUSE_SECRET_KEY"
session_note = "prod"
